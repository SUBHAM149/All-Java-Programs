//FactorialUsingRecursive
package com.sub.blc;

public class FactorialUsingRecursive {

	public static int getFactorial(int num) {
		if (num==1) {
			return 1;
		}
		return num*getFactorial(num -1);
	}

}
package com.sub.elc;

import com.sub.blc.FactorialUsingRecursive;

public class FactorialRecursive {
	public static void main(String[] args) {
		int number=Integer.parseInt(IO.readln("Enter A Number : "));
		IO.println("The factorial of "+number+"is :"+FactorialUsingRecursive.getFactorial(number));

	}

}
