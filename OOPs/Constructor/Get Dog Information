package OPPs;

public class Dog {
		 String name;
		 double height;
		 int age;

		 public void getDogInformation() {
		     System.out.println("Dog Name  : " + name);
		     System.out.println("Dog Height: " + height + " feet");
		     System.out.println("Dog Age   : " + age + " years");
		 }

		 public void bark() {
		     System.out.println(name + " is barking loudly!!!");
		 }

		 public static void main(String[] args) {
		     Dog dog1 = new Dog();
		     dog1.name = "Spiky";
		     dog1.height = 2.5;
		     dog1.age = 3;

		     dog1.getDogInformation();
		     dog1.bark();
		 }
	}
package OPPs;

public class DogDetails {
	   String name;
	   double height;
	   int age;
	   public void getDogInfo() {
		   System.out.println("Dog Name is "+name);
		   System.out.println("Dog height is "+height);
		   System.out.println("Dog age is "+age);
	   }
	   public void bark() {
		   System.out.println("I bark at strangers");
	   }
	}
