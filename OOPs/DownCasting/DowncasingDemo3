package com.sub.down_casting;

class Animal {
    public void sleep() {
        System.out.println("Generic Animal is Sleeping");
    }
}

class Dog extends Animal {

    @Override
    public void sleep() {
        System.out.println("Dog is Sleeping");
    }

    public void bark() {
        System.out.println("Dog is Barking");
    }
}

class Lion extends Animal {

    @Override
    public void sleep() {
        System.out.println("Lion is Sleeping");
    }

    public void roar() {
        System.out.println("Lion is Roaring");
    }
}

public class DowncasingDemo2 {

    public static void main(String[] args) {

        Animal animal = new Dog();   // Upcasting
        checkAnimalBehaviour(animal);

        System.out.println("--------------");

        animal = new Lion();        // Upcasting
        checkAnimalBehaviour(animal);
    }

    public static void checkAnimalBehaviour(Animal animal) {

        if (animal instanceof Dog) {
            Dog dog = (Dog) animal;     // Downcasting
            dog.sleep();
            dog.bark();
        }
        else if (animal instanceof Lion) {
            Lion lion = (Lion) animal;  // Downcasting
            lion.sleep();
            lion.roar();
        }
    }
}
