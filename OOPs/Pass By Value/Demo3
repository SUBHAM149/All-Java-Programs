package com.sub.pass_by_value;

public class Product {
    private int price = 1500;

    public int getPrice() {
        return price;
    }

    public void setPrice(int price) {
        this.price = price;
    }
}
package com.sub.pass_by_value;

public class PassByValueDemo3 {

    public static void main(String[] args) {
        Product p1 = new Product();
        System.out.println("Before Method Call : " + p1.getPrice());
        modify(p1);
        System.out.println("After Method Call : " + p1.getPrice());
    }

    public static void modify(Product prod) {
        prod.setPrice(2400);
    }
}
