//BLC
package factory_method;
public class Employee 
{
    
    private String name;
    private int id;
    private String department;
    private double salary;

    
    private Employee(String name, int id, String department, double salary) 
    {
        this.name = name;
        this.id = id;
        this.department = department;
        this.salary = salary;
    }

   
    public static Employee createEmployeeObject(String name, int id, String department, double salary) 
    {
        return new Employee(name, id, department, salary);
    }

    
    public double calculateAnnualSalary() 
    {
        double annualSalary = salary * 12;
        double bonus = 0;

        switch (department.toLowerCase()) 
        {
            case "sales":
                bonus = annualSalary * 0.10;
                break;
            case "engineering":
                bonus = annualSalary * 0.15;
                break;
            case "hr":
                bonus = annualSalary * 0.08;
                break;
            default:
                bonus = annualSalary * 0.05;
        }

        return annualSalary + bonus;
    }

   
    public String toString() 
    {
        return "ID: " + id + ", Name: " + name + ", Department: " + department +
               ", Monthly Salary: " + String.format("%.2f", salary) +
               ", Annual Salary (with Bonus): " + String.format("%.2f", calculateAnnualSalary());
    }
}

//ELC
package factory_method;

import java.util.Scanner;

public class TestEmployee 
{
    public static void main(String[] args) 
    {
        Scanner sc = new Scanner(System.in);

        while (true) 
        {
            IO.println("Enter Employee ID: ");
            int id = Integer.parseInt(sc.nextLine());

            IO.println("Enter Employee Name: ");
            String name = sc.nextLine();

            IO.println("Enter Monthly Salary: ");
            double salary = Double.parseDouble(sc.nextLine());

            IO.println("Enter Department (Sales, Engineering, HR, Other): ");
            String department = sc.nextLine();

            
            Employee emp = Employee.createEmployeeObject(name, id, department, salary);

           
            IO.println(emp.toString());

            
            IO.println("Do you want to continue? (yes/no): ");
            String choice = sc.nextLine();

            if (choice.equalsIgnoreCase("no")) 
            {
                System.out.println("Exiting... Thank you!");
                break;
            }
        }
        sc.close();
    }
}

